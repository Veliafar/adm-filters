{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitHelpers": true,
        "strictNullChecks": false,
        "baseUrl": "./src",
        "outDir": "./dist",
        "paths": {
            "models": ["src/models"],
            "components": ["src/components"],
            "directives": ["src/directives"]
        },
        "lib": [
            "dom",
            "es2017"
        ],
        "types": [
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}